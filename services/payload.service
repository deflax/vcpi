[Unit]
Description=Start GUI Payload

[Service]
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
User=pi
Group=pi
ExecStartPre=/bin/sleep 60
ExecStart=/opt/sonic-pi/bin/sonic-pi
Restart=always
RestartSec=10s
KillMode=process
TimeoutSec=infinity

[Install]
WantedBy=graphical.target
